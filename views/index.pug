doctype html
html
  head
    title= `${title}`
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/css/style.css")
  body
    h1 List of Pets
    table
      thead
        tr
          th Name
          th Type
          th Weight
          th Age
        tbody
          each pet in pets
            tr
              td= pet.properties.name
              td= pet.properties.pet_type
              td= pet.properties.weight
              td= pet.properties.age
